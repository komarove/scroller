{
  "manifest_version": 3,
  "name": "Custom Scrollbar",
  "version": "1.0",
  "description": "Decorate your scrollbars.",
  "options_page": "options.html",
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
  "background": {
    "service_worker": "js/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Custom Scrollbar",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}