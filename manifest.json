{
  "manifest_version": 3,
  "name": "Custom Scrollbar",
  "version": "1.0",
  "description": "Decorate your scrollbars.",
  "options_page": "options.html",
  "permissions": ["scripting"],
  "action": {
    "default_title": "Custom Scrollbar",
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}